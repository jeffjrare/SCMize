- if !purchase.new? 
  %ul.tabs
    %li.active
      %a{:href => "#!purchases"} Produit
    %li
      %a{:href => "#!suppliers"} Fournisseurs (#{purchase.suppliers.length})
    %li
      %a{:href => "#!suppliers"} Achats (#{purchase.purchases.length})
    %li
      %a{:href => "#!sales"} Ventes

