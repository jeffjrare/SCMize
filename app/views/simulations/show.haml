%li.item{:id => ('item-state-' + simulation.id.to_s) }
  .trigger
  .item
    .data
      %h4.item-name= simulation.name
      %h5.item-identifier= "(#{simulation.identifier})"
      %h5.item-identifier
        %span.label.label-info Primary production
      %h5.item-description= "#{simulation.machine.name} => #{simulation.product.name}"

      %ul.infos
        %li
          %span.value=simulation.machine.identifier
          %span.name machine
        %li
          %span.value=simulation.product.identifier
          %span.name product
        %li
          %span.value Finished product
          %span.name Type  
        %li
          %span.value=simulation.created_at.to_s
          %span.name downtime
        %li
          %span.value 96.64%
          %span.name quality

    .crud.alert-actions
      %ul
        %li
          %a{:href => "/simulations/#{simulation.id}/edit"} Modifier
