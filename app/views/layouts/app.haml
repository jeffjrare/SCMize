!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title #{settings.title}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %meta{:content => "", :name => "description"}
      %meta{:content => "", :name => "author"}
      = css_assets('application')

  %body{"data-offset" => "50", "data-spy" => "scroll", "data-target" => ".subnav"}
    /
      Navbar
      \==================================================
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "../"} #{settings.title}
          .nav-collapse
            %ul.nav
              %li
                %a{:href => '/'} Dashboard            
              %li
                %a{:href => '/simulations'} Simulations
              %li
                %a{:href => '/machines'} Machines
              %li
                %a{:href => '/products'} Products
              %li
                %a{:href => '/settings'} Settings
              %li
                %a{:href => '/contact'} Contact                
              %li
                %a{:href => '/about'} About                
    .container
      %header#overview.jumbotron.subhead
        %h1 #{settings.title}
        %p.lead #{subtitle}
      = preserve(yield)

    %footer.footer
      %p.pull-right
        %a{:href => "#"} Back to top
    / /container
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = js_assets('application')